{
  "extends": "./frontend/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./frontend/.next/production-server/",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "backend",
    "paths": {
      "*": ["node_modules/*"],
      "backend/*": ["./*"]
    }
  },
  "include": [
    "backend/**/*",
    "global.d.ts"
  ]
}